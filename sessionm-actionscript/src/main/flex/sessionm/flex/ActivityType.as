package sessionm.flex {

/**
 * Provides constants to be used when calling
 * <code>SessionM.initActivity()</code> to specify the type of activity to be
 * presented.
 *
 * @see SessionM#initActivity()
 */
public final class ActivityType {
    /**
     * Use <code>"PORTAL"</code> when presenting the rewards portal.
     */
    public static const PORTAL:String = "PORTAL";

    /**
     * Use <code>"ACHIEVEMENT"</code> when presenting standard (non-custom)
     * achievements.
     */
    public static const ACHIEVEMENT:String = "ACHIEVEMENT";
}
}
